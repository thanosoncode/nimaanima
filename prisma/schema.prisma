generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  price       Int
  description String
  category    String
  images      String[]
}

model NewProduct {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  price           Int
  description     String
  category        String
  images          String[]
  sold            Boolean
  gift            Boolean
  stripePriceId   String
  stripeProductId String
}
